header_height = 40px

body
  background white
  color #444
  font-family 'Work Sans', sans-serif
  font-weight 100
  margin 2px
  overflow-y scroll
  padding-top header_height

.header
  position fixed
  top 0
  left 0
  right 0
  background #c00
  text-transform uppercase
  padding: 0 10px 0 12px
  z-index 100
  box-shadow rgba(0, 0, 0, 0.3) 0 1px 5px
  h1, a
    margin 0
    color white
    font-size 20px
    line-height header_height
  a
    font-weight bold

a
  text-decoration none
  color #c00

.modal
  font-weight 400
  margin 20px

.instagram-modal
  img
    width 100%
    height auto

.youtube-modal
  .iframe-wrapper
    position relative
    padding-bottom 56.25%
    padding-top 25px;
    height 0
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%
